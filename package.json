{
  "name": "@devix-tecnologia/directus-file-zip",
  "version": "2.1.7",
  "description": "Creates a zip from files and saves to Directus Assets",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/cjs/types/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devix-tecnologia/directus-file-zip.git"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:esm",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv dist/esm/index.js dist/esm/index.mjs",
    "prepack": "npm run build",
    "semantic-release": "semantic-release"
  },
  "author": "Devix Tecnologia Ltda.",
  "contributors": [
    {
      "name": "Roberto Seba",
      "email": "roberto@robertoseba.com",
      "url": "https://github.com/robertoseba"
    },
    {
      "name": "Sidarta Veloso",
      "email": "sidartaveloso@gmail.com",
      "url": "https://github.com/sidartaveloso"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@semantic-release/npm": "^12.0.1",
    "@types/adm-zip": "^0.5.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.1.0",
    "assert": "^2.1.0",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@devix-tecnologia/devix-adm-zip": "^0.5.15",
    "@directus/shared": "^9.24.0",
    "axios": "^1.7.3"
  },
  "publishConfig": {
    "type": "git",
    "url": "git+https://github.com/devix-tecnologia/directus-file-zip.git",
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  }
}
